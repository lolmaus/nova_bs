; Theme Info -----------------------------------------------------------------
; required information about the theme

name =        Nova BS
description = A subtheme of Boron, copied from <a href="http://luiszuno.com/blog/downloads/nova-theme-wordpress/">Nova Wordpress Theme</a>
core =        7.x
base theme =  boron

settings[columns_list] = 1 2 3 4 5

; Stylesheets  ---------------------------------------------------------------
; Disabling default Boron layout by declaring a non-existent stylesheet with the same name.
stylesheets[all][] = css/layout.css

; Everything goes here
stylesheets[all][] = css/style.css

; Regions --------------------------------------------------------------------
; these content regions are available for block placement
regions[header_top] = Header top
regions[header] = Header
regions[subheader] = Subheader
regions[ie_only] = IE Only
regions[highlighted] = Highlighted
regions[help] = Help
regions[sidebar_first] = Sidebar First
regions[content] = Content
regions[sidebar_second] = Sidebar Second
regions[postscript] = Postscript
regions[footer] = Footer

; Fusion Apply
fusion[api] = 2
fusion[directory] = fusion_apply_skins